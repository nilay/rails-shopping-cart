.authform
  = simple_form_for(@product) do |f|
    = f.error_notification

    .form-group
      .form-inputs
        = f.input :name

    .form-group
      .form-inputs
        = f.input :description

    .form-group
      .form-inputs
        = f.input :price


    .form-actions
      = f.button :submit, "Submit"