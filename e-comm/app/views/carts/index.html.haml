%h1 Your carts


-if @order.order_lines.count > 0
  = link_to "Checkout", '/cart/checkout', {:class => "btn btn-primary"}
  %div.table-responsive
    %table.table.table-striped
      %thead
        %tr
          %th Item
          %th Qty
          %th Unit Price
          %th Total Price
          %th

      %tbody
        - @order.order_lines.each do |item|
          %tr
            %td= item.product.name
            %td= item.qty
            %td= item.unit_price
            %td= item.total_price
            %td= link_to 'Remove', order_item_path(item), :method => :delete, :data => { :confirm => 'Are you sure?' }
        %tr
          %td
          %td
          %td
            %strong Total Price
          %td
            %strong= @order.total
          %td
-else
  %h3 "No item in your cart"
%br

= link_to 'Continue Shoping', products_path
